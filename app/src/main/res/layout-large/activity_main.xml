<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/layer_card_background">

            <TextView
                android:id="@+id/ddText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/degree_of_difficulty"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <EditText
                android:id="@+id/ddEnter"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary_text"
                android:nextFocusDown="@+id/editScore1">
                <requestFocus/>
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/total"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/secondary_text"
                android:visibility="visible"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/totalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary_text"
                android:visibility="invisible"
                android:background="@color/primary_light">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/layout1"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:paddingRight="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/layer_card_background">

            <TableLayout
                android:id="@+id/layout3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/primary_light">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light">

                    <TextView
                        android:id="@+id/score1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".15"
                        android:gravity="center"
                        android:text="@string/score_1"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light"/>

                    <EditText
                        android:id="@+id/editScore1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:nextFocusDown="@+id/editScore2">
                    </EditText>

                    <TextView
                        android:id="@+id/score2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".15"
                        android:gravity="center"
                        android:text="@string/score_2"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light" />

                    <EditText
                        android:id="@+id/editScore2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:nextFocusDown="@+id/editScore3">
                    </EditText>

                    <TextView
                        android:id="@+id/score3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".15"
                        android:gravity="center"
                        android:text="@string/score_3"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light"/>

                    <EditText
                        android:id="@+id/editScore3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:nextFocusDown="@+id/editScore4">
                    </EditText>

                </TableRow>

                <TableRow
                    android:id="@+id/layout4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:background="@color/primary_light">

                    <TextView
                        android:id="@+id/score4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".15"
                        android:gravity="center"
                        android:text="@string/score_4"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light" />

                    <EditText
                        android:id="@+id/editScore4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:nextFocusDown="@+id/editScore5">
                    </EditText>

                    <TextView
                        android:id="@+id/score5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".15"
                        android:gravity="center"
                        android:text="@string/score_5"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light" />

                    <EditText
                        android:id="@+id/editScore5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:nextFocusDown="@+id/editScore6">
                    </EditText>

                    <TextView
                        android:id="@+id/score6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".15"
                        android:gravity="center"
                        android:text="@string/score_6"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light" />

                    <EditText
                        android:id="@+id/editScore6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:nextFocusDown="@+id/editScore7">
                    </EditText>

                </TableRow>

                <TableRow
                    android:id="@+id/layout6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="16dp"
                    android:background="@color/primary_light">

                    <TextView
                        android:id="@+id/score7"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".15"
                        android:gravity="center"
                        android:text="@string/score_7"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light" />

                    <EditText
                        android:id="@+id/editScore7"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text">
                    </EditText>

                    <TextView
                        android:id="@+id/f1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".15"
                        android:text="@string/score_7"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light"
                        android:visibility="invisible"/>

                    <EditText
                        android:id="@+id/f2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:visibility="invisible">
                    </EditText>

                    <TextView
                        android:id="@+id/f3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".15"
                        android:text="@string/score_7"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/f4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".7"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:visibility="invisible">
                    </EditText>

                </TableRow>

                <TableRow
                    android:id="@+id/fake1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:background="@color/primary_light">

                    <TextView
                        android:id="@+id/fake2"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".15"
                        android:gravity="center"
                        android:text="@string/score_7"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/fake3"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="555"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:visibility="invisible">
                    </EditText>

                    <TextView
                        android:id="@+id/fake4"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".15"
                        android:text="@string/score_7"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light"
                        android:visibility="invisible"/>

                    <EditText
                        android:id="@+id/fake5"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".7"
                        android:inputType="numberDecimal"
                        android:text="555"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:visibility="invisible">
                    </EditText>

                    <TextView
                        android:id="@+id/fake6"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".15"
                        android:text="@string/score_7"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/secondary_text"
                        android:background="@color/primary_light"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/fake7"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".7"
                        android:inputType="numberDecimal"
                        android:text="555"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/primary_text"
                        android:visibility="invisible">
                    </EditText>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="16dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/primary_light">

                    <Button
                        android:id="@+id/buttonOne"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/one"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />

                    <Button
                        android:id="@+id/buttonTwo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/two"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />

                    <Button
                        android:id="@+id/buttonThree"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/three"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />

                    <Button
                        android:id="@+id/buttonClear"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/clear"
                        android:textSize="@dimen/button_text_medium"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/primary_light">

                    <Button
                        android:id="@+id/buttonFour"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/four"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />
                    <Button
                        android:id="@+id/buttonFive"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/five"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />
                    <Button
                        android:id="@+id/buttonSix"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/six"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />

                    <Button
                        android:id="@+id/buttonBack"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/back"
                        android:textSize="@dimen/button_text_medium"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light">

                    <Button
                        android:id="@+id/buttonSeven"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/seven"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />
                    <Button
                        android:id="@+id/buttonEight"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/eight"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />
                    <Button
                        android:id="@+id/buttonNine"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/nine"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />

                    <Button
                        android:id="@+id/buttonNext"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:text="@string/next"
                        android:textSize="@dimen/button_text_medium"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_light">

                    <Button
                        android:id="@+id/buttonZero"
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:layout_margin="4dp"
                        android:layout_weight=".25"
                        android:text="@string/zero"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />
                    <Button
                        android:id="@+id/buttonPeriod"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight=".25"
                        android:text="@string/period"
                        android:textSize="@dimen/button_text_large"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:clickable="true" />

                    <Button
                        android:id="@+id/buttonScore"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_weight=".50"
                        android:text="@string/total_label"
                        android:textSize="@dimen/button_text_medium"
                        android:textColor="@color/white"
                        android:background="@drawable/layout_selector"
                        style="@android:style/Widget.Holo.Button"
                        android:layout_span="2"
                        android:clickable="true" />
    
                </TableRow>
    
            </TableLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
